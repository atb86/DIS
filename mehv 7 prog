import java.net.*;
import java.io.*;
import java.lang.Runnable;

/**
 *
 * @author mukas
 */
public class Chat extends javax.swing.JFrame implements Runnable {

    /**
//Click on send btn and put this(CLIENT HAI)
 private void sendButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_sendButtonActionPerformed
        // TODO add your handling code here:
        String ip = ClientIPField.getText();
        int port = Integer.parseInt(ClientPortField.getText());

try{
Socket s = new Socket(InetAddress.getByName(ip), port);
DataInputStream dis = new DataInputStream(s.getInputStream());
DataOutputStream dos = new DataOutputStream(s.getOutputStream());
while(true){
String msg = MessagePane.getText();
dos.writeUTF(msg);
ServerResponseArea.append("You: " + msg + "\n");
String response = dis.readUTF();
}
} catch(Exception e){
e.printStackTrace();
}

/**
     * This method is called from within the constructor to initialize the form.
     * WARNING: Do NOT modify this code. The content of this method is always
     * regenerated by the Form Editor.
     */
    @SuppressWarnings("unchecked")
    @Override
 @Override
        public void run(){
        String ip = ServerIPField.getText();
        int port = Integer.parseInt(ServerPortField.getText());
        try{
            ServerSocket ss = new ServerSocket(port, 5,InetAddress.getByName(ip));
        while(true){
                Socket s = ss.accept();
                DataInputStream dis = new DataInputStream(s.getInputStream());
                DataOutputStream dos = new DataOutputStream(s.getOutputStream());

        String receivedMessage = dis.readUTF();
        ServerResponseArea.append("Received: " +receivedMessage + "\n");
      
        s.close();
        }
}catch(Exception e){
e.printStackTrace();
}
}


//Click SERVER btn and type this
 private void StartButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_StartButtonActionPerformed
        // TODO add your handling code here:
        Thread t = new Thread(this, "Server");
        t.start();
        StartButton.setEnabled(false);
        ServerResponseArea.append("ServerListening\n");
    }//GEN-LAST:event_StartButtonActionPerformed

